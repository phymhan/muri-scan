% bbox: 

src = '/media/ligong/Picasso/Share/cbimfs/Research/MURI/clips/r3';
dst = '/media/ligong/Picasso/Share/cbimfs/Research/MURI/bbox';
vids = dir(fullfile(src, '*.mp4'))';

for vid_ = vids
    v = VideoReader(fullfile(src, vid_.name));
    fr = readFrame(v);
    imshow(fr)
    fprintf('%s, %s\n', vid_.name)
    waitforbuttonpress
    [x, y] = ginput(2);
    fid = fopen(strrep(fullfile(src, vid_.name), '.mp4', '.txt'), 'w');
    fprintf(fid, '%d %d', round(x), round(y));
    fclose(fid)
end
